<div class="page" id="image-page">
	<div id="image-page-header">
		<a href="http://www.bl.uk/" target=blank><img class="bl-logo" src="/images/bl-logo-new.png" height=75 width=100></a>
		<div style="height:100%;float:right;width:20%">
			<a href="/" class="back-search" style="margin-top:5px;"> <i class="fa fa-home"></i> Home</a>
			<a href="javascript:history.go(-1)" class="back-search"> <i class="fa fa-arrow-left"></i> Back to search</a>
		</div>
	</div>
	<hr>
	<h3 class="center-text">{{imageTitle}}</h3>
	<img src="{{url}}" id="image-size"/>
	<div id="desc-panel">
		<div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Image Details</h3>
            </div>
            <div class="panel-body">
				<i class="fa fa-book"></i> Volume : {{volume}}<br>
				<i class="fa fa-institution"></i> Publisher : {{publisher}}<br>
				<i class="fa fa-pencil"></i> Title : {{imageTitle}}<br>
				<i class="fa fa-user"></i> Author : {{author}}<br>
				<i class="fa fa-compass"></i> Place of Publication : {{publicationPlace}}<br>
				<i class="fa fa-barcode"></i> Book ID : {{bookID}}<br>
				<i class="fa fa-calendar"></i> Year : {{year}}<br>
				<i class="fa fa-bookmark"></i> Page : {{page}}<br>
            </div>
      	</div>
      	{{#if alchemyTags}}
		<div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Generated Tags : Alchemy</h3>
            </div>
            <div class="panel-body">
            	<div class="tags">
            		{{#each alchemyTags}}
						{{#if this.text}}
							<a class="tag" href="javascript:void(0)"  data-toggle="modal" data-target="#myModal">{{this.text}} : {{convertToPercentage this.score}} </a>
						{{/if}}
					{{/each}}
				</div>
            </div>
      	</div>
      	{{/if}}
      	{{#if imaggaTags}}
      	<div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Generated Tags : Imagga</h3>
            </div>
            <div class="panel-body">
            	<div class="tags">
            		{{#each imaggaTags}}
						{{#if this.tag}}
							<a class="tag" href="javascript:void(0)" data-toggle="modal" data-target="#myModal">{{this.tag}} : {{shortenDecimal this.confidence}} 
							</a>
						{{/if}}
					{{/each}}
				</div>
            </div>
      	</div>
      	{{/if}}
      	{{#unless imaggaTags}}
      		{{#unless alchemyTags}}
      			<div class="alert alert-warning" role="alert">
  					<a class="alert-link">No tags are available for this image</a>
				</div>
      		{{/unless}}
      	{{/unless}}
	</div>
	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
			  <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			    <h4 class="modal-title" id="myModalLabel">Details for tag : <span class="tag-name"><span></h4>
			  </div>
			  <div class="modal-body">
			    Most frequently co-occuring tags
			    <br>
			  </div>
			  <div class="modal-footer">
			    <a class="search-tag-btn"><button type="button" class="btn btn-default">More results of this tag</button>
			    </a>
			  </div>
			</div>
		</div>
	</div>
</div>